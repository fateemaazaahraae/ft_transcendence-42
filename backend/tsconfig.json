{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,                            // ✅ Required to use allowImportingTsExtensions
    "allowImportingTsExtensions": true         // ✅ Allows `import './file.ts'`
  },
  "ts-node": {
    "esm": true                                // ✅ Tells ts-node to run in ESM mode
  },
  "include": ["srcs/**/*"]
}
